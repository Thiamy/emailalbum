<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/blueish_gradient"
	android:id="@+id/album_editor_root">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal" android:layout_weight="0">
		<Button android:layout_height="wrap_content" android:id="@+id/btn_pick_pictures"
			android:text="@string/btn_pick_pictures" android:layout_width="fill_parent"
			android:layout_weight="1"></Button>
		<Button android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_weight="1"
			android:id="@+id/btn_album_export" android:text="@string/btn_album_export"></Button>
		<Button android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_weight="1"
			android:text="@string/btn_album_share" android:id="@+id/btn_album_share"></Button>
	</LinearLayout>
	<com.kg.emailalbum.mobile.creator.TouchInterceptor
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1" android:id="@android:id/list"
		android:descendantFocusability="afterDescendants"></com.kg.emailalbum.mobile.creator.TouchInterceptor>


</LinearLayout>
