<set xmlns:android="http://schemas.android.com/apk/res/android"
	 android:zAdjustment="top">
	<scale android:fromXScale="0.3" android:toXScale="1"
		android:fromYScale="0.3" android:toYScale="1" android:pivotX="50%"
		android:pivotY="30%" android:duration="900"
		android:interpolator="@android:anim/decelerate_interpolator" />
	<translate android:fromXDelta="70%p" android:toXDelta="0"
		android:duration="1000" android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
	<alpha android:fromAlpha="0.3" android:toAlpha="1.0"
		android:duration="800"
		android:interpolator="@android:anim/decelerate_interpolator" />
</set>

