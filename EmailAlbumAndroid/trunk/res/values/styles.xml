<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Tag">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_margin">5sp</item>
		<item name="android:background">@drawable/tag_gradient</item>
		<item name="android:padding">5sp</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowColor">@android:color/background_dark</item>
		<item name="android:textColor">#FFFFFF</item>

	</style>


	<style name="Animations" />
	
	<style name="Animations.GrowFromBottom">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>
	
	<style name="Animations.GrowFromTop">
		<item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>
	
	<style name="Animations.PopDownMenu">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
	</style>
</resources>
