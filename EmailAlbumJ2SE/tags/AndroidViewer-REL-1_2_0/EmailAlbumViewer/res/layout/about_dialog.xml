<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/AboutDialogLinearLayout" android:orientation="vertical">
	<TextView android:id="@+id/AboutText" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/about_text"
		android:autoLink="web|email"></TextView>
	<ImageButton android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/GoWebButton"
		android:text="@string/about_go_web" android:src="@drawable/donate"></ImageButton>
</LinearLayout>
